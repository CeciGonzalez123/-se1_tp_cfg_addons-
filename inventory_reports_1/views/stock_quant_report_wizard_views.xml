<odoo>
    <record id="view_stock_quant_report_wizard_form" model="ir.ui.view">
        <field name="name">stock.quant.report.wizard.form</field>
        <field name="model">stock.quant.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Reporte de Inventario">
                <group>
                    <field name="report_date"/>
                </group>
                <footer>
                    <button string="Generar PDF" type="object" name="action_generate_inventory_pdf" class="btn-primary"/>
                    <button string="Cerrar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_stock_quant_report_wizard" model="ir.actions.act_window">
        <field name="name">Reporte de Inventario</field>
        <field name="res_model">stock.quant.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_stock_quant_report_wizard"
              name="Reporte de Inventario"
              parent="stock.menu_stock_root"
              action="action_stock_quant_report_wizard"/>
</odoo>





