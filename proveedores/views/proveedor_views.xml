<odoo>
    <data>
        <!-- Vista de Árbol -->
        <record id="view_proveedor_tree" model="ir.ui.view">
            <field name="name">proveedor.tree</field>
            <field name="model">proveedor</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                </tree>
            </field>
        </record>

        <!-- Vista de Formulario -->
        <record id="view_proveedor_form" model="ir.ui.view">
            <field name="name">proveedor.form</field>
            <field name="model">proveedor</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="address"/>
                    </group>
                    <group>
                        <field name="product_ids"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- Acción -->
        <record id="action_proveedor" model="ir.actions.act_window">
            <field name="name">Proveedores</field>
            <field name="res_model">proveedor</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Elementos del Menú -->
        <menuitem id="menu_proveedor_root" name="Proveedores"/>
        <menuitem id="menu_proveedor" parent="menu_proveedor_root" name="Proveedores" action="action_proveedor"/>
    </data>
</odoo>
