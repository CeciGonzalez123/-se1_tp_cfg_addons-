<!--////////////////////////////////////////////////////////////////////////////////////////////////////////////////-->
<odoo>
    <data>
        <!-- Vista de árbol para listar las restricciones de compra -->
        <record id="view_purchase_restriction_tree" model="ir.ui.view">
            <field name="name">purchase.restriction.tree</field>
            <field name="model">purchase.restriction</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>            <!--Campo ded nombre de la restriccion -->
                    <field name="product_id"/>      <!--Campo de el id del producto-->
                    <field name="min_qty"/>         <!--Campo de la cantidad minima-->
                    <field name="max_qty"/>         <!--Campo de la cantidad maxima-->
                    <field name="min_total"/>       <!--Campo del totalizador minimo-->
                    <field name="max_total"/>       <!--Campo del totlizador maximo-->
                </tree>
            </field>
        </record>

        <!-- Vista de formulario para crear/editar restricciones de compra -->
        <record id="view_purchase_restriction_form" model="ir.ui.view">
            <field name="name">purchase.restriction.form</field>
            <field name="model">purchase.restriction</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>            <!--Campo del nombre de la restriccion-->
                            <field name="product_id"/>      <!--Campo de el id del producto-->
                            <field name="min_qty"/>         <!--Campo de la cantidad minima-->
                            <field name="max_qty"/>         <!--Campo de la cantidad maxima-->
                            <field name="min_total"/>       <!--Campo del totalizador minimo-->
                            <field name="max_total"/>       <!--Campo del totlizador maximo-->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acción para abrir las restricciones de compra -->
        <record id="action_purchase_restriction" model="ir.actions.act_window">
            <field name="name">Restricciones de Compra</field>
            <field name="res_model">purchase.restriction</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea restricciones de compra para los productos.
                </p>
            </field>
        </record>

        <!-- Menú para acceder a las restricciones de compra -->
        <menuitem id="menu_purchase_restriction" name="Restricciones de Compra"
                  parent="purchase.menu_purchase_root" action="action_purchase_restriction"/>

        <!-- Vista de Formulario de Orden de Compra -->
        <record id="view_purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="button_unlock" string="Desbloquear Orden de Compra" type="object" class="oe_highlight"
                            invisible="state != 'bloqueado'"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
<!--////////////////////////////////////////////////////////////////////////////////////////////////////////////////-->